<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:background="@mipmap/blue"
        android:id="@+id/img_ls_news"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:text="标题很多字的哪个"
        android:id="@+id/tv_title_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_ls_news"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#000000"
        android:textSize="19dp" />

    <TextView
        android:text="作者"
        android:id="@+id/tv_writer_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_news"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/img_ls_news"
        android:textColor="#99A0AB" />

    <TextView
        android:text="跟帖多少"
        android:id="@+id/tv_tag_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title_news"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:textColor="#99A0AB" />

</RelativeLayout>