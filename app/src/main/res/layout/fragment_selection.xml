<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/rl_selection"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_selection_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lines="2"
        android:ellipsize="end"

        android:textColor="#111111"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_selection_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_selection_title"
        android:layout_below="@id/tv_selection_title"/>

    <TextView
        android:id="@+id/tv_selection_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_selection_count"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_selection_count" />

    <ImageView
        android:id="@+id/iv_selection_res_cover_url"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_selection_duration"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:layout_alignBottom="@id/iv_selection_res_cover_url"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="#52111111"
        android:textSize="12dp"
        android:text="1:10"
        android:textColor="#ffffff" />


</RelativeLayout>