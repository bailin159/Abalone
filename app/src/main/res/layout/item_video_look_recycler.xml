<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_video_film_icon"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:src="@mipmap/baoyu_logo_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_video_search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="海贼王"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_video_search_data"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="1999"
                    android:textColor="#008B00"
                    android:textSize="30sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_video_search_area"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="日本"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_video_search_dir"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:text="尾田荣一郎" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_video_search_tag"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="标签"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_video_search_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简介"
                android:textColor="#FF6347"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#CFCFCF" />

</LinearLayout>