<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_find_tv">

        <EditText
            android:id="@+id/video_look_search_et"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="输入电影或影视剧名" />

        <ImageView
            android:id="@+id/video_look_search_Im"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/search_icon" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:id="@+id/video_film_search_ll"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_video_search_icon"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:src="@mipmap/baoyu_logo_gray" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_play_circle_outline_black_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_video_search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="海贼王"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_video_search_year"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="5dp"
                    android:text="1999"
                    android:textColor="#008B00"
                    android:textSize="30sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_video_search_area"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="日本"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_video_search_dir"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:text="尾田荣一郎" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_video_search_tag"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="标签"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_video_search_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简介"
                android:textColor="#FF6347"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#CFCFCF" />

    <LinearLayout
        android:id="@+id/video_search_log_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/baoyu_llll" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="爆娱视频, 看你想看!!!"
            android:textColor="#00bff3"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:src="@mipmap/video_jianxiao" />

    </LinearLayout>
</LinearLayout>